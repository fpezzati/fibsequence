{
  "name": "server",
  "version": "1.0.0",
  "description": "Boundary web component who handles requests about fib calculator.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all hotreload:build hotreload:run",
    "hotreload:run": "webpack --watch",
    "hotreload:build": "nodemon \"./bin/index.js\" --watch \"./bin\"",
    "hotreload:debug": "nodemon \"./bin/index.js\" --inspect --watch \"./bin\"",
    "test": "node_modules/.bin/tape -r @babel/register test/**/*.test.js",
    "build": "webpack --mode=production",
    "debug": "webpack --mode=development --watch && node ./bin/index.js --inspect",
    "debug1": "npm-run-all hotreload:build hotreload:debug",
    "debug2": "concurrently \"webpack --watch && nodemon --inspect ./bin/index.js\"",
    "debug3": "webpack --mode=development --watch && nodemon \"./bin/index.js\" --watch \"./bin\"",
    "debug4": "webpack --watch"
  },
  "author": "fpezzati@gmail.com",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.4",
    "express": "^4.17.1",
    "pg": "^7.4.3",
    "pg-native": "^3.0.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "nodemon": "^2.0.4",
    "nodemon-webpack-plugin": "^4.3.2",
    "npm-run-all": "^4.1.5",
    "tape": "^5.0.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.0"
  }
}
